# Development Dockerfile for manuscript-engine with Claude Code
FROM node:20-alpine

WORKDIR /app

# Install dependencies for native modules
RUN apk add --no-cache \
    git \
    python3 \
    make \
    g++ \
    bash

# Copy package files
COPY package.json ./
COPY tsconfig.json* ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Set environment variables
ENV NODE_ENV=development
ENV CI=true

# Default command runs tests in watch mode
CMD ["npm", "test", "--", "--watch"]
