{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "composite": true,
    "noEmit": false,
    "baseUrl": "../../",
    "paths": {
      "@apps/api-node": ["services/orchestrator"],
      "@apps/api-node/*": ["services/orchestrator/*"],
      "@apps/api-node/src": ["services/orchestrator/src"],
      "@apps/api-node/src/*": ["services/orchestrator/src/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
