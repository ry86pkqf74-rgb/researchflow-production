{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@researchflow/core": ["./packages/core/index.ts"],
      "@researchflow/core/*": ["./packages/core/*"],
      "@researchflow/phi-engine": ["./packages/phi-engine/index.ts"],
      "@researchflow/phi-engine/*": ["./packages/phi-engine/*"],
      "@researchflow/ai-router": ["./packages/ai-router/index.ts"],
      "@researchflow/ai-router/*": ["./packages/ai-router/*"],
      "@packages/core": ["./packages/core/index.ts"],
      "@packages/core/*": ["./packages/core/*"]
    }
  },
  "include": ["./**/*.ts", "./packages/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
