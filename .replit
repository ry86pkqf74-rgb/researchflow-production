# ResearchFlow Production - Replit Configuration
# This configures the project for production deployment on Replit

run = ["bash", "scripts/replit-start.sh"]
entrypoint = "scripts/replit-start.sh"

hidden = [".git", "node_modules", "__pycache__", ".pytest_cache", "*.pyc"]

[nix]
channel = "stable-24_05"

[env]
NODE_ENV = "production"
GOVERNANCE_MODE = "LIVE"
PORT = "3001"
WORKER_PORT = "8000"
WEB_PORT = "5173"
PYTHONPATH = "${REPL_HOME}/services/worker/src:${REPL_HOME}/services/worker"
PATH = "${REPL_HOME}/node_modules/.bin:${PATH}"

[packager]
language = "nodejs"

[packager.features]
packageSearch = true
guessImports = true
enabledForHosting = true

[languages]

[languages.javascript]
pattern = "**/{*.js,*.jsx,*.ts,*.tsx}"

[languages.javascript.languageServer]
start = "typescript-language-server --stdio"

[languages.python]
pattern = "**/*.py"

[languages.python.languageServer]
start = "pylsp"

[deployment]
run = ["bash", "scripts/replit-start.sh"]
deploymentTarget = "cloudrun"
ignorePorts = false

[[ports]]
localPort = 3001
externalPort = 3001
exposeLocalhost = true

[[ports]]
localPort = 5173
externalPort = 80
exposeLocalhost = true

[[ports]]
localPort = 8000
externalPort = 8000
exposeLocalhost = true

[[ports]]
localPort = 5432
externalPort = 5432

[[ports]]
localPort = 6379
externalPort = 6379

[auth]
pageEnabled = false
buttonEnabled = false
