{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://researchflow.dev/schemas/phi_patterns.schema.json",
  "title": "PHI Patterns Schema",
  "description": "Schema for ResearchFlow canonical PHI pattern definitions",
  "type": "object",
  "required": ["version", "patterns"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the pattern spec"
    },
    "description": {
      "type": "string",
      "description": "Human-readable description of the spec"
    },
    "hipaaReference": {
      "type": "string",
      "description": "HIPAA regulation reference"
    },
    "patterns": {
      "type": "array",
      "description": "Array of PHI pattern definitions",
      "items": {
        "$ref": "#/definitions/PatternDefinition"
      },
      "minItems": 1
    }
  },
  "definitions": {
    "PatternDefinition": {
      "type": "object",
      "required": ["id", "category", "tier", "regex", "hipaaCategory", "baseConfidence", "description"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[A-Z][A-Z0-9_]+$",
          "description": "Unique identifier for the pattern (UPPER_SNAKE_CASE)"
        },
        "category": {
          "type": "string",
          "enum": [
            "SSN",
            "EMAIL",
            "PHONE",
            "MRN",
            "NAME",
            "ZIP_CODE",
            "ADDRESS",
            "DOB",
            "HEALTH_PLAN",
            "ACCOUNT",
            "LICENSE",
            "DEVICE_ID",
            "URL",
            "IP_ADDRESS",
            "AGE_OVER_89"
          ],
          "description": "PHI category this pattern detects"
        },
        "tier": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["HIGH_CONFIDENCE", "OUTPUT_GUARD"]
          },
          "minItems": 1,
          "description": "Detection tiers this pattern belongs to"
        },
        "regex": {
          "type": "object",
          "required": ["source"],
          "properties": {
            "source": {
              "type": "string",
              "description": "Regex pattern source (escaped for JSON)"
            },
            "flags": {
              "type": "string",
              "pattern": "^[gimsuy]*$",
              "default": "g",
              "description": "Regex flags (g, i, m, s, u, y)"
            }
          }
        },
        "hipaaCategory": {
          "type": "string",
          "pattern": "^164\\.514\\(b\\)\\(2\\)\\(i\\)\\([A-Z]\\)$",
          "description": "HIPAA Safe Harbor identifier reference"
        },
        "baseConfidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Base confidence score (0-1)"
        },
        "description": {
          "type": "string",
          "description": "Human-readable description of what this pattern detects"
        }
      }
    }
  }
}
