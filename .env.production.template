# ============================================
# ResearchFlow - Production Environment Template
# ============================================
# IMPORTANT: Copy this file to .env on your production server
# and fill in all values before deployment.
#
# Generated: January 28, 2026
# Phase: 6 - VPS Production Deployment
# ============================================

# ===================
# Domain Configuration
# ===================
DOMAIN=researchflow.app
NODE_ENV=production

# ===================
# Database (PostgreSQL 16 with pgvector)
# ===================
POSTGRES_USER=ros_prod
POSTGRES_PASSWORD=<GENERATE_SECURE_PASSWORD_32_CHARS>
POSTGRES_DB=researchflow
DATABASE_URL=postgresql://ros_prod:<POSTGRES_PASSWORD>@postgres:5432/researchflow

# ===================
# Redis Cache
# ===================
REDIS_PASSWORD=<GENERATE_SECURE_PASSWORD_32_CHARS>

# ===================
# Authentication (JWT)
# ===================
JWT_SECRET=<GENERATE_256_BIT_SECRET>
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
AUTH_ALLOW_STATELESS_JWT=false

# ===================
# Admin Configuration
# ===================
ADMIN_EMAILS=logan.glosser@gmail.com

# ===================
# AI API Keys (Copy from existing .env)
# ===================
OPENAI_API_KEY=<YOUR_OPENAI_KEY>
ANTHROPIC_API_KEY=<YOUR_ANTHROPIC_KEY>
CLAUDE_API_KEY=<YOUR_CLAUDE_KEY>
XAI_API_KEY=<YOUR_XAI_KEY>
MERCURY_API_KEY=<YOUR_MERCURY_KEY>
INCEPTIONLABS_API_KEY=<YOUR_INCEPTIONLABS_KEY>
CODEX_API_KEY=<YOUR_CODEX_KEY>

# ===================
# AI Router Configuration
# ===================
AI_INTEGRATIONS_OPENAI_API_KEY=${OPENAI_API_KEY}
AI_INTEGRATIONS_ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
AI_INTEGRATIONS_XAI_API_KEY=${XAI_API_KEY}
AI_INTEGRATIONS_MERCURY_API_KEY=${MERCURY_API_KEY}

# ===================
# Chat Agent Configuration
# ===================
CHAT_AGENT_MODEL=gpt-4
CHAT_AGENT_PROVIDER=openai
CHAT_AGENT_ENABLED=true

# ===================
# Code Intelligence (Sourcegraph)
# ===================
SOURCEGRAPH_API_KEY=<YOUR_SOURCEGRAPH_KEY>
SRC_ACCESS_TOKEN=${SOURCEGRAPH_API_KEY}

# ===================
# Integrations
# ===================
# Notion
NOTION_API_KEY=<YOUR_NOTION_KEY>
NOTION_DEPLOYMENT_TASKS_DB=52e84cac-8ed0-4231-b9c8-5b854d042b9b
NOTION_EXECUTION_LOG_DB=79d9d19c-9de3-4674-976f-fa9ad96ea826

# Figma
FIGMA_API_KEY=<YOUR_FIGMA_KEY>

# ===================
# Literature & Research APIs
# ===================
NCBI_API_KEY=<YOUR_NCBI_KEY>
SEMANTIC_SCHOLAR_API_KEY=<YOUR_SEMANTIC_SCHOLAR_KEY>
LITERATURE_CACHE_TTL=3600

# ===================
# PHI Governance (HIPAA Compliance)
# ===================
PHI_SCAN_ENABLED=true
PHI_FAIL_CLOSED=true
STRICT_PHI_ON_UPLOAD=true

# ===================
# Mode Configuration
# ===================
GOVERNANCE_MODE=LIVE
ROS_MODE=
NO_NETWORK=false
MOCK_ONLY=false
ALLOW_UPLOADS=true

# ===================
# Dashboard Features
# ===================
DASHBOARD_ENABLED=true
DASHBOARD_CALENDAR_INTEGRATION=true
DASHBOARD_REFRESH_INTERVAL=5000

# ===================
# Analytics & Monitoring
# ===================
ANALYTICS_IP_SALT=<GENERATE_RANDOM_SALT>
VITE_SENTRY_DSN=<YOUR_SENTRY_DSN>
VITE_ENABLE_ANALYTICS=true

# ===================
# Webhooks (Optional)
# ===================
STRIPE_WEBHOOK_SECRET=<YOUR_STRIPE_SECRET>
ZOOM_WEBHOOK_SECRET_TOKEN=<YOUR_ZOOM_TOKEN>
ZOOM_VERIFICATION_TOKEN=<YOUR_ZOOM_VERIFICATION>

# ===================
# Worker Configuration
# ===================
UVICORN_WORKERS=4
EXTRACTION_TIMEOUT_SECONDS=60
ENRICHMENT_TIMEOUT_SECONDS=30
CONFERENCE_CACHE_TTL=86400
DATA_PARSE_STRICT=true

# ===================
# Version Control (Phase 5.5)
# ===================
PROJECTS_PATH=/data/projects

# ============================================
# END OF PRODUCTION ENVIRONMENT TEMPLATE
# ============================================
